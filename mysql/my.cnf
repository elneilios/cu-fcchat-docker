[mysqld]
# Force MySQL 8.0 to use utf8 (3-byte) instead of utf8mb4 (4-byte)
# This makes it compatible with PHP 5.6 MySQLi which doesn't recognize charset 255
character-set-server=utf8
collation-server=utf8_general_ci

# Skip charset negotiation on connect
skip-character-set-client-handshake

[client]
default-character-set=utf8
